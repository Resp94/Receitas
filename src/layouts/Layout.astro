---
import '../styles/global.css';
import '../styles/components.css';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Aplicativo de Receitas com Design Premium" } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Fonts (Inter como fallback para Lufga) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
		
		<title>{title} | Receitas</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container text-center">
				<p>&copy; {new Date().getFullYear()} Receitas. Inspirado em Seara.</p>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
	}
	main {
		flex: 1; /* Preenche o espaço disponível empurrando o footer */
		padding-bottom: 4rem;
	}
	.site-footer {
		background-color: #f9f9f9;
		color: #666;
		padding: 2rem 0;
		border-top: 1px solid #eee;
		font-size: 0.875rem;
	}
</style>
